<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="controller" class="com.vilin.spring.chapter02.bankapp.scope.controller.FixedDepositControllerImpl">
		<property name="fixedDepositService" ref="service" />
	</bean>

	<bean id="service" class="com.vilin.spring.chapter02.bankapp.scope.service.FixedDepositServiceImpl">
		<property name="fixedDepositDao" ref="dao"/>
	</bean>

	<bean id="dao" class="com.vilin.spring.chapter02.bankapp.scope.dao.FixedDepositDaoImpl" />

	<bean id="fixedDepositDetails" class="com.vilin.spring.chapter02.bankapp.scope.domain.FixedDepositDetails"
		scope="prototype" />

	<bean id="anotherDao" class="com.vilin.spring.chapter02.bankapp.scope.dao.FixedDepositDaoImpl" />

</beans>
